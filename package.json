{
  "name": "@mskelton/webpack-config",
  "description": "Shared webpack config for my React projects.",
  "version": "1.0.5",
  "author": "Mark Skelton",
  "repository": {
    "type": "git",
    "url": "https://github.com/mskelton/webpack-config.git"
  },
  "bugs": {
    "url": "https://github.com/mskelton/webpack-config/issues"
  },
  "homepage": "https://github.com/mskelton/webpack-config#readme",
  "license": "MIT",
  "keywords": [
    "webpack",
    "webpack-configuration",
    "react"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "babel src --out-dir lib --source-maps --extensions .ts",
    "types:generate": "yarn tsc",
    "types:check": "yarn tsc --noEmit --emitDeclarationOnly false",
    "lint": "yarn eslint .",
    "test": "jest",
    "postversion": "git push && git push --tags"
  },
  "eslintConfig": {
    "extends": [
      "@mskelton",
      "@mskelton/eslint-config/typescript"
    ],
    "plugins": [
      "typescript-sort-keys"
    ],
    "rules": {
      "typescript-sort-keys/interface": "warn",
      "typescript-sort-keys/string-enum": "warn"
    }
  },
  "prettier": "@mskelton/prettier-config",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@mskelton/eslint-config": "^5.6.1",
    "@mskelton/prettier-config": "^5.1.1",
    "@mskelton/tsconfig": "^1.0.2",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/node": "^13.9.1",
    "@types/webpack": "^4.41.7",
    "@types/webpack-dev-server": "^3.10.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sort-destructure-keys": "^1.3.3",
    "eslint-plugin-sort-keys-fix": "^1.1.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-typescript-sort-keys": "^0.5.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "webpack": "^4.42.0",
    "webpack-dev-server": "^3.10.3"
  }
}
